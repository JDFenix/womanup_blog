@page "/survey"

<div class="container-fluid p-0">
    <!-- Sección de progreso con gradiente -->
    <div class="progress-section text-white p-4 mb-3">
        <h2 class="mb-2">Tu progreso</h2>
        <div class="d-flex justify-content-between align-items-center mb-1">
            <span>Cuestionario completado</span>
            <span>40%</span>
        </div>
        <div class="progress mb-3" style="height: 8px;">
            <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-award me-2"></i>
            <span>2 insignias ganadas</span>
        </div>
        <button class="btn btn-light w-100 d-flex justify-content-center align-items-center">
            Continuar aprendiendo
            <i class="bi bi-arrow-right ms-2"></i>
        </button>
    </div>

    <!-- Botones de navegación -->
    <div class="d-flex justify-content-center gap-3 px-3 mb-3">
        <button class="btn btn-purple flex-fill">Documentos</button>
        <button class="btn btn-purple-outline flex-fill">Organizaciones</button>
    </div>


    <!-- Lista de documentos -->
    <div class="px-3">
        @foreach (var _ in Enumerable.Range(0, 3))
        {
            <div class="document-card mb-3 p-3">
                <div class="d-flex align-items-start mb-2">
                    <i class="bi bi-file-text me-2"></i>
                    <strong>CEDAW</strong>
                </div>
                <p class="mb-1">Convención sobre la Eliminación de Todas las Formas de Discriminación contra la Mujer</p>
                <p class="small mb-3">El tratado internacional más completo sobre los derechos de las mujeres, adoptado en 1979 por la Asamblea General de la ONU.</p>
                <a class="btn btn-purple w-100" href="#">Ver documento</a>
            </div>
        }
    </div>
</div>

<style>
    /* Estilos incrustados directamente en el Razor */
    .progress-section {
        background: linear-gradient(to right, #9c27b0, #e91e63);
        border-radius: 0 0 10px 10px;
    }

    .progress-bar {
        background-color: white;
    }

    .btn-purple {
        background-color: #9c27b0;
        color: white;
        border-radius: 25px;
        border: none;
    }

        .btn-purple:hover {
            background-color: #7b1fa2;
            color: white;
        }

    .btn-purple-outline {
        background-color: transparent;
        color: #9c27b0;
        border: 2px solid #9c27b0;
        border-radius: 25px;
    }

        .btn-purple-outline:hover {
            background-color: rgba(156, 39, 176, 0.1);
        }

    .document-card {
        background-color: #f3e5f5;
        border-radius: 10px;
    }
</style>

